@page
@model Project.Pages.Items.IndexModel
@{
    ViewData["Title"] = "Grammar page";
    <style>
        .Stripe {
        }
    </style>
}

<div class="container bg-white box-shadow text-center rounded"
     style="padding-left: 0em; padding-right: 0em; padding-bottom:0.4em; margin-bottom:1em; margin-top:4.5em;">
    <img class="img-fluid rounded-lg" src="~/grads/yyy.png" style="height:150px; width:100%;" />
    <p style="padding-top: 0.5em;">
        <h3>
            Here's everything you need<br />
            to immerse yourself in English grammar.
        </h3>
    </p>
    <p>
        <h4>
            <small>
                There are tons of grammar rules, so we decided to divide them by sections.<br />
                You can switch between sections by clicking the buttons below.
            </small>
        </h4>
    </p>
</div>

<div class="container bg-white box-shadow p-0 rounded" style="height: 500px;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item[0].Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item[0].Tag)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item[0].Link)
                </th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model.Item)
            {
                if (item.Tag == "ReadingA" || item.Tag == "ReadingB" || item.Tag == "ReadingC")
                    continue;
                <tr>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.Link)">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tag)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>