@page
@model Project.Pages.Items.IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="container bg-white box-shadow text-center rounded"
     style="padding-left: 0em; padding-right: 0em; padding-bottom:0.4em; margin-bottom:1em; margin-top:4.5em;">
    <img class="img-fluid rounded-lg" src="~/grads/r.png" style="height:150px; width:100%;" />
    <p style="padding-top: 0.5em;">
        <h3>
            Hundreds of texts.<br />
            For you.
        </h3>
    </p>
    <p>
        <h4>
            <small>
                You can choose the level of English by clicking the selector below.
            </small>
        </h4>
    </p>
</div>

<div class="container" style="height: 500px; padding-left: 15em; padding-right: 15em;">
    <div class="container bg-white box-shadow rounded-lg p-0">
        <table class="table table-hover table-borderless " style="width: 100%; height: 100%;">
            <thead>
                <tr>
                    <th style="width: 40%; padding-bottom: 1.5em;">
                        @Html.DisplayNameFor(model => model.Item[0].Title)
                    </th>
                    <th style="width: 25%; padding-bottom: 1.5em;">
                    </th>
                    <th class="p-0">
                        <form class="form-inline">
                            <p>
                                <select class="custom-select" asp-for="ItemTag" style="margin-top: 1em; margin-right: 0.5em; margin-left: 1.3em;">
                                    <option value="">All</option>
                                    <option value="ReadingA">Levels A1-A2</option>
                                    <option value="ReadingB">Levels B1-B2</option>
                                    <option value="ReadingC">Levels C1+</option>
                                </select>
                                <div style="display: none;">Title: <input type="text" asp-for="SearchString" /></div>
                                <input type="submit" value="Filter" />
                            </p>
                        </form>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item)
                {
                    if (item.Tag != "ReadingA" && item.Tag != "ReadingB" && item.Tag != "ReadingC")
                        continue;
                    <tr>
                        <td>
                            <a href="@Html.DisplayFor(modelItem => item.Link)" target="_blank">
                                @Html.DisplayFor(modelItem => item.Title)
                            </a>
                        </td>
                        <td>
                        </td>
                        <td class="text-right">
                            <a asp-page="./Items/Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-page="./Items/Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-page="./Items/Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>